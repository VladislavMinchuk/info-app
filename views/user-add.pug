extends layout

block content
  include includes/header.pug
  section.search-section.py-4
    if (badReqForm.length)
      - var name = badReqForm[0].name
      - var surname = badReqForm[0].surname
      - var age = badReqForm[0].age
    .container
      .row.justify-content-md-center
        .con-md-10.col-lg-6
          if empyFields.length
            .alert.alert-danger
              each field in empyFields
                p #[strong #{field}] is required 
          if complete.length
            .alert.alert-success
              p.mb-0= complete
          //- include add-form
          include includes/add-form.pug