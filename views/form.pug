extends layout

block content
  .container.py-5
    .row.justify-content-md-center
      .col-md-8.col-lg-6
        .card
          .card-body.bg-light
            if page === 'login'
              include includes/login-form.pug
              p= page
            if page === 'registration'
              include includes/registration-form.pug
              p= page

